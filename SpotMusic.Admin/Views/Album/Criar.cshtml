@model SpotMusic.Application.Streaming.Dto.AlbumDto

<div class="text-center">
    <h1 class="display-4">Cadastrar álbum</h1>
    <h6>Autor: @ViewBag.AutorNome</h6>
</div>

<div>
    <a type="button" role="button" class="btn btn-primary" href="/Autor/Index">Voltar</a>
</div>

<form method="post" asp-controller="Album" asp-action="Salvar">
    @Html.Hidden("IdAutorPrincipal", @ViewBag.IdAutor, new { Type = "hidden" })

    <div class="row mb-3">
        <label for="Nome" class="col-sm-2 col-form-label">Nome</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
            <span class="form-field-invalid" asp-validation-for="Nome"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="IdMusicaPrincipal" class="col-sm-2 col-form-label">Música principal</label>
        <div class="col-sm-10">
            <select asp-for="IdMusicaPrincipal" class="form-control" asp-items="@ViewBag.Musicas">
                <option value="">Selecione um estilo musical</option>
            </select>
            <span class="form-field-invalid" asp-validation-for="IdMusicaPrincipal"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label for="Capa" class="col-sm-2 col-form-label">Capa</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Capa, new { @class = "form-control", rows = 5, cols = 50 })
            <span class="form-field-invalid" asp-validation-for="Capa"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>